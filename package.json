{
  "name": "tfsec",
  "displayName": "tfsec",
  "publisher": "tfsec",
  "description": "Tfsec integration for Visual Studio Code",
  "version": "1.1.7",
  "engines": {
    "vscode": "^1.54.0"
  },
  "icon": "tfsec.png",
  "categories": [
    "Other",
    "Linters"
  ],
  "languages": [
    {
      "id": "terraform",
      "extensions": [
        ".tf",
        ".tf.json"
      ],
      "aliases": [
        "Terraform"
      ]
    }
  ],  
  "activationEvents": [
    "onView:tfsec.issueview",
    "onLanguage:terraform",
    "onCommand:tfsec.run",
    "onCommand:tfsec.refresh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "tfsec",
      "properties": {
        "tfsec.binaryPath": {
          "type": "string",
          "default": "tfsec",
          "description": "Path to tfsec if not already on the PATH"
        },
        "tfsec.ignoreDownloadedModules": {
          "type": "boolean",
          "default": "true",
          "description": "Don't include results from downloaded modules. (Still scanned, just not included in the results)"
        },
        "tfsec.fullDepthSearch": {
          "type": "boolean",
          "default": "true",
          "description": "Scan all terraform in the workspace. This will start at the top and add all terraform files into the model"
        },
        "tfsec.resolveIgnoreCodes": {
          "type": "boolean",
          "default": "true",
          "description": "Add the description for ignore codes inline with the code"
        },
        "tfsec.runOnIgnore": {
          "type": "boolean",
          "default": "true",
          "description": "Automatically rerun tfsec when a check failure is ignored"
        }
      }
    },
    "commands": [
      {
        "command": "tfsec.run",
        "title": "tfsec: Run tfsec against workspace",
        "icon": {
          "light": "resources/light/run.svg",
          "dark": "resources/dark/run.svg"
        }
      },
      {
        "command": "tfsec.refresh",
        "title": "Refresh the issue list",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "tfsec.ignore",
        "title": "Ignore this issue"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tfsec",
          "title": "tfsec",
          "icon": "media/tfsec.svg"
        }
      ]
    },
    "views": {
      "tfsec": [
        {
          "id": "tfsec.issueview",
          "name": "Issue Explorer",
          "icon": "media/tfsec.svg",
          "contextualTitle": "Issue Explorer"
        },
        {
          "id": "tfsec.helpview",
          "name": "Check Help",
          "type": "webview",
          "contextualTitle": "Issue Help",
          "visibility": "collapsed"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "tfsec.issueview",
        "contents": "No issues are found.\n[Run tfsec now](command:tfsec.run)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "tfsec.ignore",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "tfsec.run",
          "when": "view == tfsec.issueview",
          "group": "navigation@1"
        },
        {
          "command": "tfsec.refresh",
          "when": "view == tfsec.issueview",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "tfsec.ignore",
          "when": "view == tfsec.issueview && viewItem == TFSEC_FILE_LOCATION"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.20.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.0"
  },
  "repository": {
    "url": "https://github.com/tfsec/vscode-tfsec"
  },
  "dependencies": {
    "tsc": "^1.20150623.0",
    "typescipt": "^1.0.0"
  }
}
